{
  "name": "nest-next-poc",
  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon src/main.ts",
    "build:clean": "rimraf .next",
    "build:server": "npx tsc --project tsconfig.server.json && npx babel .next/production-server -d .next/production-server --config-file ./.babelrc-server --extensions \".js\"",
    "build:ui": "npx next build",
    "build": "yarn build:clean && yarn build:server && yarn build:ui",
    "start": "cross-env-shell NODE_ENV=production pm2 start ecosystem.config.js"
  },
  "dependencies": {
    "@babel/core": "^7.4.5",
    "@nestjs/common": "~6.2.4",
    "@nestjs/core": "~6.2.4",
    "@nestjs/platform-express": "~6.2.4",
    "cache-manager": "^2.9.0",
    "core-js": "^3.1.2",
    "dotenv": "^8.0.0",
    "joi": "^14.0.0",
    "nest-next": "~0.7.0",
    "next": "~8.1.0",
    "react": "~16.8.6",
    "react-dom": "~16.8.6",
    "reflect-metadata": "^0.1.13",
    "rxjs": "~6.5.2",
    "tslint-react": "^4.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-decorators": "^7.1.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-typescript": "^7.1.0",
    "@nestjs/testing": "~6.2.4",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^24.0.13",
    "@types/joi": "^14.3.3",
    "@types/next": "^8.0.5",
    "@zeit/next-typescript": "^1.1.1",
    "babel-plugin-module-resolver": "^3.1.1",
    "cross-env": "^5.2.0",
    "jest": "^24.8.0",
    "nodemon": "^1.18.8",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tsconfig-paths": "^3.6.0",
    "tslint": "^5.11.0",
    "typescript": "~3.4.5"
  },
  "jest": {
    "moduleNameMapper": {
      "^@server/(.*)$": "<rootDir>/src/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "coverageDirectory": "./coverage",
    "preset": "ts-jest/presets/js-with-ts",
    "testMatch": null
  }
}
